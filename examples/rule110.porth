// mem

mem 98 + 1 .

0 while dup 98 < do
   0 while dup 100 < do
      dup mem + , if
         dup mem + 100 + 42 .
      else
         dup mem + 100 + 32 .
      end
      1 +
   end
   mem + 100 + 10 .
   101 mem 100 + 1 1 syscall3 drop

   // pattern
   mem     , 1 shl
   mem 1 + ,
   bor

   1 while dup 98 < do
      swap 1 shl 7 band
      over mem + 1 + , bor
      2dup 110 swap shr 1 band
      swap mem + swap .
      swap

      1 +
   end
   drop drop

   1 +
end
drop
